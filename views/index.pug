      header.header
        a.button.button__info.link(href='info.html') Game Info
        h1.title Note-Learning Game
        h1.streak
          | Streak: 
          span#streak 0
      .content
        img.notes(src='', alt='note')
      .game-settings
        ul.level
          li#easy.button.button__mode.button__mode--level.selected Easy
          li#medium.button.button__mode.button__mode--level Medium
          li#hard.button.button__mode.button__mode--level Hard
        ul.clef
          li.button.button__mode.button__mode--clef.highlight.selected.treble Treble
          li.button.button__mode.button__mode--clef.bass Bass
          li.button.button__mode.button__mode--clef.both Both
      button.hamburger
